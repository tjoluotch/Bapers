    <class>domain.JobLine</class>
    <class>domain.OrderTable</class>
    <class>domain.Job</class>
    <class>domain.Customer</class>
    <class>domain.Staff</class>
    <class>domain.TaskLine</class>
    <class>domain.JobTaskBridge</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/solsoft_DB"/>
